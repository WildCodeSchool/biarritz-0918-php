{
  "scripts": {
    "autoload": "@composer dumpautoload -o",
    "test": [
      "@autoload",
      "phpunit --bootstrap vendor/autoload.php --testdox ./**/*.test.php"
    ],
    "start": [
      "@autoload",
      "(sleep 5s && xdg-open http://localhost:3000) & php -S localhost:3000 -t ."
    ]
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  },
  "require": {
    "monolog/monolog": "^1.23"
  }
}
